export HISTSIZE="2147483647"
export HISTFILESIZE="${HISTSIZE}"
export HISTCONTROL="ignoredups"
export HISTTIMEFORMAT=""

set -o vi
export FCEDIT="vi"
export EDITOR="${FCEDIT}"
export VISUAL="${FCEDIT}"

export CLICOLOR=auto
export GCC_COLORS=auto
export GZIP="--best"

export CDPATH="\
:${HOME}\
:/Workspace/xgsrc\
:/Workspace/\
:/usr/local/include\
"

if [[ -x /usr/bin/bear ]]
then
    export MAKE="bear -a make"
fi

amplxevars="/opt/intel/vtune_amplifier_xe_2017.4.0.518798/amplxe-vars.sh"
if [[ -r "${amplxevars}" ]]
then
    source "${amplxevars}"
fi
unset amplxevars

jobs()
{
    command jobs -l "${@}"
}
export -f jobs

if [[ -x /usr/bin/rlwrap ]]
then
    jdbc()
    {(
        cd /Workspace/xgsrc/xgjdbc &&
        /usr/bin/rlwrap --always-readline --histsize 2147483647 --history-filename "${HOME}/.xgjdbc_ocient_history" ./ocient "${@}"
    )}
    export -f jdbc
fi

rolehostd()
{(
    cd /Workspace/xgsrc/utilities/configgen/build &&
    rolehostd_root="../../../rolehostd" &&
    ubsan_supp="${rolehostd_root}/ubsan.supp" &&
    if [[ -r "${ubsan_supp}" ]]
    then
        export UBSAN_OPTIONS="${UBSAN_OPTIONS-"suppressions=${ubsan_supp}"}"
    fi &&
    "${rolehostd_root}/build/rolehostd" --conf sql0.conf --log-file sql0.log --override system.bin "${@}"
)}
export -f rolehostd

gdbrolehostd()
{(
    cd /Workspace/xgsrc/utilities/configgen/build &&
    rolehostd_root="../../../rolehostd" &&
    ubsan_supp="${rolehostd_root}/ubsan.supp" &&
    if [[ -r "${ubsan_supp}" ]]
    then
        export UBSAN_OPTIONS="${UBSAN_OPTIONS-"suppressions=${ubsan_supp}"}"
    fi &&
    gdb --args "${rolehostd_root}/build/rolehostd" --conf sql0.conf --log-file sql0.log --override system.bin "${@}"
)}
export -f gdbrolehostd

